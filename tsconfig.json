{
  "include": [
    "./src/**/*",
    "./server.ts"
  ],
  "exclude": [
    "./dist"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  }
}
