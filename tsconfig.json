{
  "include": [
    "./src",
    "./server.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "lib": ["ESNext", "ES2020","DOM"],
    "moduleResolution": "Node",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
  }
}
